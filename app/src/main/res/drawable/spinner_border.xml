<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Màu của shadow -->
            <corners android:radius="10dp" /> <!-- Bán kính của góc -->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền của Spinner -->
            <corners android:radius="10dp" /> <!-- Bán kính của góc -->
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
