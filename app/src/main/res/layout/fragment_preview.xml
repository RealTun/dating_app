<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/preview_avatar_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/detail_information_wrapper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="imageViewAvatar"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/jisoo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/infoWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="64dp"
                    android:orientation="vertical"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                    app:layout_constraintStart_toStartOf="@id/iv_avatar"
                    app:layout_constraintTop_toTopOf="@id/iv_avatar"
                    app:layout_constraintVertical_bias="1.0">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Tuấn"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/tvAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="20"
                            android:textColor="@color/white"
                            android:textSize="23sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="location"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Cách xa 1km"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/ib_arrow_up"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_button_op50"
                    android:contentDescription="matchesArrowUp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_up"

                    app:layout_constraintBottom_toBottomOf="@id/infoWrapper"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/infoWrapper" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/detail_information_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:contentPadding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_avatar_wrapper">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/searching_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@id/searching_wrapper"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Đang tìm kiếm"
                            android:textColor="@color/text_color"
                            android:textSize="24sp" />

                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:flexWrap="wrap">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="#2C6FF2"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:text="Chưa rõ lắm"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="#14DC4C"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:text="Nguời nói chuyện"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="#E94057"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:text="Người yêu"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />
                        </com.google.android.flexbox.FlexboxLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/introduce_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searching_wrapper">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Giới thiệu bản thân"
                            android:textColor="@color/text_color"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Em đánh rơi người yêu nè ❤"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/information_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduce_wrapper">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Thông tin chính"
                            android:textColor="@color/text_color"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="170 cm"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="cách xa 1km"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/favorite_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/information_wrapper">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Sở thích"
                            android:textColor="@color/text_color"
                            android:textSize="24sp" />

                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:flexWrap="wrap">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_button_gradient"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:text="Chụp ảnh"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />

                            <Space
                                android:layout_width="16dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_button_gradient"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:text="Cafe"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />


                            <Space
                                android:layout_width="16dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_button_gradient"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:text="Thể thao"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:text="Du lịch"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />

                            <Space
                                android:layout_width="16dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:text="Nấu ăn"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_flexShrink="1" />
                        </com.google.android.flexbox.FlexboxLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/music_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/favorite_wrapper">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Ca khúc yêu thích"
                            android:textColor="@color/text_color"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_marginHorizontal="8dp"
                                app:cardCornerRadius="8dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/guts" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:text="Traitor"
                                    android:textColor="@color/text_color"
                                    android:textSize="22sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="Olivia Rodrigo"
                                    android:textColor="@color/secondary_color"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>
